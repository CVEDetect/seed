<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="xmlJobLaucher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
        <property name="jobRepository">
            <bean class="org.springframework.batch.core.repository.support.JobRepositoryFactoryBean">
                <property name="dataSource" ref="dataSource"/>
                <property name="transactionManager">
                    <bean class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
                        <property name="dataSource" ref="dataSource"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <import resource="spring-batch-job.xml"/>
</beans>